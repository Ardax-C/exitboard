generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-1.1.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String       @id @default(cuid())
  email       String       @unique
  password    String
  name        String?
  company     String?
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  title       String?
  jobPostings JobPosting[]
}

model JobPosting {
  id                      String          @id @default(cuid())
  title                   String
  company                 String
  location                String
  type                    JobType
  level                   JobLevel
  description             String
  requirements            String[]
  contactEmail            String
  authorId                String
  status                  PostingStatus   @default(ACTIVE)
  createdAt               DateTime        @default(now())
  updatedAt               DateTime        @updatedAt
  applicationDeadline     DateTime?
  applicationInstructions String?
  applicationUrl          String?
  benefits                String[]
  companyDescription      String?
  companyIndustry         String?
  companySize             String?
  companyWebsite          String?
  contactPhone            String?
  employmentType          EmploymentType?
  preferredQualifications String[]
  responsibilities        String[]
  skills                  String[]
  startDate               DateTime?
  workplaceType           WorkplaceType?
  author                  User            @relation(fields: [authorId], references: [id])
  salary                  Salary?
}

model Salary {
  id           String       @id @default(cuid())
  min          Float
  max          Float
  currency     String       @default("USD")
  period       SalaryPeriod
  jobPostingId String       @unique
  isNegotiable Boolean      @default(false)
  jobPosting   JobPosting   @relation(fields: [jobPostingId], references: [id])
}

enum JobType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
  REMOTE
}

enum JobLevel {
  ENTRY
  JUNIOR
  MID
  SENIOR
  LEAD
  EXECUTIVE
}

enum EmploymentType {
  PERMANENT
  TEMPORARY
  SEASONAL
  CONTRACT
}

enum WorkplaceType {
  ON_SITE
  HYBRID
  REMOTE
}

enum PostingStatus {
  ACTIVE
  CLOSED
  DRAFT
}

enum SalaryPeriod {
  HOURLY
  MONTHLY
  YEARLY
  WEEKLY
}
